---
layout: base
---
<div class="wrapper">

  <h1>{{title}}</h1>

  {%if projectType %}<p>Project Type: <strong>{{projectType}}</strong></p>{% endif %}
  {%if credits %}<p>Credits: <strong>{{credits | safe}}</strong></p>{% endif %}
  {%if linkUrl %}<p><a href="{{linkUrl}}" title="Visit {{displayUrl}}" rel="bookmark">Visit: <strong>{{displayUrl or linkUrl}}</strong></a></p>{% endif %}

  {%if subtitle %}<h2>{{ subtitle }}</h2>{% endif %}
  {%if description %}<h3>{{ description }}</h3>{% endif %}
              
  {{ content | safe }}

  {% for image in images %}
    <img width="875" height="1177" src="/assets/img/{{image.large}}.jpg" alt="{{title}} Screenshot"
      srcset="/assets/img/{{image.large}} 875w, /assets/img/{{image.medium}} 535w, /assets/img/{{image.small}} 400w, /assets/img/{{image.full}} 1329w"
      sizes="(max-width: 875px) 100vw, 875px"
    />
  {% endfor %}

  {%if testimonial -%}
  <blockquote>
    {{ testimonial }}
    <footer>â€” {{ testimonialAuthor }}</footer>
  </blockquote>
  {%- endif %}

</div>

<figure role="group" aria-labelledby="screenshots" class="wrapper screenshots">
  <figcaption id="screenshots" class="screenshots__title">Screenshots<span class="screen-reader-text"> for {{title}}.
    {%- if screenshotsAlt %} {{ screenshotsAlt }}{% endif -%}
    </span>
  </figcaption>
  {% for image in screenshots %}
  <img src="/assets/img/{{image.src}}" alt="{% if image.alt %}{{image.alt}}{% endif %}" class="screenshots__image">
  {% endfor %}
  {# TODO: Add conditional check for screenshotsMobile #}
  {% for image in screenshotsMobile %}
  <img src="/assets/img/{{image.src}}" alt="{% if image.alt %}{{image.alt}}{% endif %}" class="screenshots__image screenshots__image--mobile">
  {% endfor %}
</figure>